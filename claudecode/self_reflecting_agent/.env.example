# Self-Reflecting Agent Environment Configuration
# Copy this file to .env and update with your actual API keys

# =============================================================================
# LLM API Keys - Configure the models you want to use
# =============================================================================

# Anthropic Claude Models (Primary recommendation)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI GPT Models  
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini Models
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# Model Routing Configuration
# =============================================================================

# Enable intelligent model routing (true/false)
ENABLE_MODEL_ROUTING=true

# Default fallback model when primary choices fail
FALLBACK_MODEL=claude-3-haiku-20240307

# Cost management - daily spending limits (USD)
DAILY_COST_LIMIT_ANTHROPIC=20.00
DAILY_COST_LIMIT_OPENAI=15.00
DAILY_COST_LIMIT_GOOGLE=10.00

# Rate limiting preferences (requests per minute)
RATE_LIMIT_ANTHROPIC=50
RATE_LIMIT_OPENAI=60
RATE_LIMIT_GOOGLE=60

# =============================================================================
# Model Preferences by Task Type
# =============================================================================

# Orchestration and high-level planning
ORCHESTRATION_PREFERRED_MODEL=claude-3-5-sonnet-20241022

# Code generation and implementation
CODE_GENERATION_PREFERRED_MODEL=claude-3-5-sonnet-20241022

# Debugging and error analysis (Gemini 2.5 Pro optimized for debugging)
DEBUGGING_PREFERRED_MODEL=gemini-2.0-flash-exp

# Code review and analysis
CODE_REVIEW_PREFERRED_MODEL=claude-3-5-sonnet-20241022

# Documentation and explanation
DOCUMENTATION_PREFERRED_MODEL=claude-3-haiku-20240307

# Architecture and system design
ARCHITECTURE_PREFERRED_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# RAG and Memory Configuration
# =============================================================================

# Enable RAG (Retrieval-Augmented Generation)
ENABLE_RAG=true

# Enable persistent memory across sessions
ENABLE_MEMORY=true

# Memory provider (mem0, chroma, or simple)
MEMORY_PROVIDER=mem0

# Mem0 configuration (if using mem0)
MEM0_API_KEY=your-mem0-api-key-here
MEM0_PROJECT_ID=your-project-id

# Vector database configuration
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Semantic Search Configuration
# =============================================================================

# Enable semantic search of project files
ENABLE_SEMANTIC_SEARCH=true

# Search hybrid weights (0.0 to 1.0, higher = more semantic vs keyword)
SEMANTIC_SEARCH_ALPHA=0.7

# Maximum chunk size for document processing
MAX_CHUNK_SIZE=512

# Chunk overlap for better context preservation
CHUNK_OVERLAP=50

# =============================================================================
# Performance and Monitoring
# =============================================================================

# Enable performance tracking
ENABLE_PERFORMANCE_TRACKING=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cache TTL for search results (seconds)
SEARCH_CACHE_TTL=3600

# Maximum context length preservation when switching models
MAX_PRESERVED_CONTEXT=50000

# Context compression strategy (summarize or truncate)
CONTEXT_COMPRESSION_STRATEGY=summarize

# =============================================================================
# Development and Testing
# =============================================================================

# Development mode (enables additional logging and debugging)
DEVELOPMENT_MODE=false

# Mock API calls for testing (true/false)
MOCK_API_CALLS=false

# Test mode - use cheaper models for development
TEST_MODE=false

# =============================================================================
# Security and Privacy
# =============================================================================

# Enable audit logging of all API calls
ENABLE_AUDIT_LOGGING=true

# Anonymize user data in logs (true/false)
ANONYMIZE_LOGS=true

# Local-only processing (disable external API calls)
LOCAL_ONLY_MODE=false

# =============================================================================
# Project-Specific Overrides
# =============================================================================

# Override model selection for specific file types
PYTHON_PREFERRED_MODEL=claude-3-5-sonnet-20241022
JAVASCRIPT_PREFERRED_MODEL=gpt-4o
TYPESCRIPT_PREFERRED_MODEL=gpt-4o
RUST_PREFERRED_MODEL=claude-3-5-sonnet-20241022
GO_PREFERRED_MODEL=gemini-2.0-flash-exp

# Domain-specific preferences
FINANCIAL_TRADING_MODEL=claude-3-5-sonnet-20241022
DATA_SCIENCE_MODEL=gpt-4o
SECURITY_AUDIT_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# Advanced Configuration
# =============================================================================

# Custom model endpoints (for self-hosted models)
CUSTOM_MODEL_ENDPOINT=
CUSTOM_MODEL_API_KEY=

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Multi-agent coordination
ENABLE_MULTI_AGENT_COORDINATION=true

# Advanced context management
ENABLE_ADVANCED_CONTEXT_MANAGEMENT=true

# Automatic model selection optimization
ENABLE_AUTO_OPTIMIZATION=true

# =============================================================================
# Integration Settings
# =============================================================================

# IDE integration
ENABLE_IDE_INTEGRATION=true

# Git integration for context enhancement
ENABLE_GIT_INTEGRATION=true

# Project file indexing patterns (comma-separated)
INDEX_FILE_PATTERNS=*.py,*.js,*.ts,*.java,*.cpp,*.c,*.h,*.rb,*.go,*.rs,*.php,*.md,*.txt

# Exclude patterns for indexing
EXCLUDE_PATTERNS=node_modules,__pycache__,.git,dist,build,target

# =============================================================================
# Notifications and Alerts
# =============================================================================

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# Email notifications (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Cost alert thresholds
COST_WARNING_THRESHOLD=15.00
COST_CRITICAL_THRESHOLD=25.00